@model Race
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Image" class="img-fluid" alt="Racing Club Image">
        </div>
        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p>@Model.Description</p>
            <p>Location: <strong>@Model.Address.City</strong></p>
            <p>State: <strong>@Model.Address.State</strong></p>
            <p>Category: <a href="@Model.RaceCategory "></p>
            <form asp-page-handler="Join" method="post">
                <button type="submit" class="btn btn-primary">Join Now</button>
            </form>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col">
            <h3>About Us</h3>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col">
            <h3>Events</h3>
            <p>List of upcoming events or races can be displayed here.</p>
        </div>
    </div>
</div>